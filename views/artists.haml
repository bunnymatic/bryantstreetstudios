.sidebar
  %h3 Artists
  %ul.artists_list
    - @artists.sort_by{|a| a[1].lastname.downcase}.each do |aid, a|
      %li.artist
        %a{:href => "/artists/#{aid}"}
          .name #{a.fullname}
.content
  = haml :breadcrumb, :layout => false
  %h1 Artists
  .artists
    %ul
      - @artists.reject{|a| a[1].art_pieces.empty?}.sort_by{|a| a[1].lastname.downcase}.each do |aid, a|
        %li.thumb
          %a{:href => "/artists/#{aid}"}
            .img
              %img{:src => a.art_pieces[0].thumbnail }
            .name #{a.fullname}
