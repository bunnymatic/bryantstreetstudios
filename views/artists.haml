.sidebar
  %h3 Artists
  %ul.artists_list
    - @artists.each do |a|
      %li.artist
        %a{:href => "/artist/#{a.id}"}
          .name #{a.firstname} #{a.lastname}
.content
  = haml :breadcrumb, :layout => false
  %h1 Artists
  .artists
    list of artist thumbs
    %ul
      - @artists.each do |a|
        %li.thumb
          .img 
            - if a.art_pieces && a.art_pieces.length > 0
              %img{:src => a.art_pieces[0]['thumb'] }

          .name #{a.firstname} #{a.lastname}
